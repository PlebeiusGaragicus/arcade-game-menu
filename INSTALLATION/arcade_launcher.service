[Unit]
Description=Arcade Launcher Service
After=network.target

[Service]
ExecStart=/usr/bin/python3 /path/to/your/arcade_launcher.py
Restart=always
User=your_username
Group=your_groupname
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/your_username/.Xauthority

[Install]
WantedBy=multi-user.target
